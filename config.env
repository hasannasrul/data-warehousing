# Configuration file for Data Warehousing Infrastructure

# AWS Region
AWS_REGION=us-east-1

# Environment (dev, staging, prod)
ENVIRONMENT=dev

# S3 Bucket Configuration
S3_BUCKET_PREFIX=data-warehouse
S3_ENABLE_VERSIONING=true
S3_ENCRYPTION=AES256

# RDS Configuration
RDS_INSTANCE_CLASS=db.t3.micro
RDS_ALLOCATED_STORAGE=20
RDS_ENGINE=postgres
RDS_ENGINE_VERSION=14.7
RDS_BACKUP_RETENTION=7
RDS_MULTI_AZ=false
RDS_DATABASE_NAME=warehouse
RDS_USERNAME=admin

# Redshift Configuration
REDSHIFT_NODE_TYPE=dc2.large
REDSHIFT_NODES=2
REDSHIFT_DATABASE_NAME=warehouse
REDSHIFT_USERNAME=admin
REDSHIFT_PORT=5439
REDSHIFT_SNAPSHOT_RETENTION=7

# Glue Configuration
GLUE_PYTHON_VERSION=3
GLUE_ENABLE_SPARK_UI=true
GLUE_JOB_TIMEOUT=2880
GLUE_MAX_CONCURRENT_RUNS=2

# Monitoring and Logging
ENABLE_CLOUDWATCH_LOGS=true
LOG_RETENTION_DAYS=30
ENABLE_ENHANCED_MONITORING=true

# Tags
TAG_ENVIRONMENT=dev
TAG_OWNER=data-engineering
TAG_PROJECT=data-warehouse
TAG_COST_CENTER=engineering
